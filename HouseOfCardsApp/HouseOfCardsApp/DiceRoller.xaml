<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HouseOfCardsApp.DiceRoller">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout HorizontalOptions="FillAndExpand" Padding="20,20,20,20" x:Name="DiceLayout">
            <Label Text="Number of sides on dice, max 100:"/>
            <Entry x:Name="txtDiceSides" Keyboard="Numeric"></Entry>
            <StackLayout HorizontalOptions="FillAndExpand" Padding="0,10,0,0">
                <Label Text="Number of dice to roll, max 20:"/>
                <Entry x:Name="txtNumberDice" Keyboard="Numeric"></Entry>
            </StackLayout>
            <StackLayout>
                <Button x:Name="btnRoll" Text="Roll Dice" Clicked="Button_Clicked"></Button>
            </StackLayout>            
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>